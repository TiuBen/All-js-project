{
  "compilerOptions": {
    "esModuleInterop": true,

    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "moduleResolution": "bundler", // Vite 4.3+ 推荐使用这个
    "skipLibCheck": true,
    "strict": true,
    "jsx": "react",
  },
  "include": [
    "src",
    "**/*.ts",
    "**/*.tsx",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.d.ts",
    "src/**/*.svg",
    "**/*.svg"  // 确保包含 SVG 文件
  ]
}