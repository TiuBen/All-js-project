datasource dutyDB {
  provider = "sqlite"
  url      = "file:../src/test.db"
}

generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
  engineType = "client" 
  runtime                = "nodejs"
  moduleFormat  = "cjs"
  importFileExtension = "cjs"
}

// ===============================
// Duty 表的 Prisma 模型（你刚给的）
// ===============================

model Duty {
  id                     Int     @id @default(autoincrement()) @map("duty_id")
  userId                 Int?
  username               String?
  position               String?
  dutyType               String?
  inTime                 String?
  outTime                String?
  roleType               String?
  relatedDutyTableRowId  Json?
  roleStartTime          String?
  roleEndTime            String?
  roleTimes              String?
  status                 String?
  relatedPrepareTableId  Json?
}

model Log {
  id        Int     @id @default(autoincrement())
  method    String?
  url       String?
  body      String?
  query     String?
  params    String?
  userId    Int?
  ip        String?
  createdAt String?

}

// ===============================
// Position 表的 Prisma 模型
// ===============================
model Position {
  id        Int     @id @default(autoincrement()) @unique
  position  String?
  dutyType  String?
  canTeach  Int?
  display   Int?
}

enum DutyType {
  "主班"
  "副班"
}

enum RoleType {
  "教员"
  "见习"
  "管制"
  "领班"
}




// ===============================
// User 表的 Prisma 模型
// ===============================
model User {
  id          Int     @id @default(autoincrement()) @unique
  username    String?  
  availablePositions    String?  
  availableDutyType    String?  
  roleType    String?  
  status      String?  
  avatarImage String?  
  team        Int?     
  rank        Int?     

  @@map("user")
}